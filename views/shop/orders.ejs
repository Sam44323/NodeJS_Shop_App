<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (ordersArray.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% ordersArray.forEach(orderItem => { %>
                        <li class="orders__item">
                            <h1>Order - # <%= orderItem.orderId %></h1>
                            <ul class="orders__products">
                                <% for(let prod of orderItem.products){ %>
                                    <li class="orders__products-item"><%= prod.product.title %> (<%= prod.quantity %>)</li>
                                    <p>Price - <%=(prod.product.price * prod.quantity).toFixed(2)%> <a href="/orders-invoice/<%= orderItem._id %>">Invoice</a></p>
                                 <%}%>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>